{
  "id": "nl.philips.hue",
  "version": "4.0.0",
  "brandColor": "#F4AF2E",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Philips Hue"
  },
  "description": {
    "en": "Philips Hue for Homey"
  },
  "author": {
    "name": "Athom B.V."
  },
  "contributors": {
    "developers": [
      {
        "name": "Dennie de Groot",
        "email": "mail@denniedegroot.nl"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "category": "lights",
  "__drivers": [
    {
      "id": "motionsensor",
      "name": {
        "en": "Motion Sensor",
        "nl": "Bewegingssensor"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_motion",
        "measure_temperature",
        "measure_luminance",
        "measure_battery"
      ],
      "images": {
        "large": "drivers/motionsensor/assets/images/large.jpg",
        "small": "drivers/motionsensor/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "select_bridge",
          "navigation": {
            "next": "press_button"
          }
        },
        {
          "id": "press_button"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "__flow": {
    "triggers": [
      {
    ],
    "actions": [
      
      
      {
        "id": "setScene",
        "title": {
          "en": "Set a scene",
          "nl": "Activeer een scene"
        },
        "args": [
          {
            "name": "scene",
            "type": "autocomplete"
          }
        ]
      },
      {
        "id": "groupOn",
        "title": {
          "en": "Turn all lights on in a room",
          "nl": "Zet alle lampen aan in een ruimte"
        },
        "args": [
          {
            "name": "group",
            "type": "autocomplete"
          }
        ]
      },
      {
        "id": "groupOff",
        "title": {
          "en": "Turn all lights off in a room",
          "nl": "Zet alle lampen uit in een ruimte"
        },
        "args": [
          {
            "name": "group",
            "type": "autocomplete"
          }
        ]
      },
      {
        "id": "enableMotionSensor",
        "title": {
          "en": "Enable sensor",
          "nl": "Schakel sensor in"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=motionsensor"
          }
        ]
      },
      {
        "id": "disableMotionSensor",
        "title": {
          "en": "Disable sensor",
          "nl": "Schakel sensor uit"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=motionsensor"
          }
        ]
      }
    ]
  }
}