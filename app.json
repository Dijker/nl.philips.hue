{
  "id": "nl.philips.hue",
  "version": "4.0.0",
  "brandColor": "#F4AF2E",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Philips Hue"
  },
  "description": {
    "en": "Philips Hue for Homey"
  },
  "author": {
    "name": "Athom B.V."
  },
  "contributors": {
    "developers": [
      {
        "name": "Dennie de Groot",
        "email": "mail@denniedegroot.nl"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "category": "lights",
  "flow": {
    "actions": [
      {
        "id": "shortAlert",
        "title": {
          "en": "Blink the light (short)",
          "nl": "Knipper de lamp (kort)"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=bulb"
          }
        ]
      },
      {
        "id": "longAlert",
        "title": {
          "en": "Blink the light (long)",
          "nl": "Knipper de lamp (lang)"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=bulb"
          }
        ]
      },
      {
        "id": "startColorLoop",
        "title": {
          "en": "Start colorloop effect",
          "nl": "Begin kleur effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=bulb&capabilities=light_hue"
          }
        ]
      },
      {
        "id": "stopColorLoop",
        "title": {
          "en": "Stop colorloop effect",
          "nl": "Stop kleur effect"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=bulb&capabilities=light_hue"
          }
        ]
      },
      {
        "id": "setRandomColor",
        "deprecated": true,
        "title": {
          "en": "Set random color",
          "nl": "Kies willekeurige kleur"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=bulb&capabilities=light_hue"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "images": {
        "large": "/drivers/bulb/assets/images/large.jpg",
        "small": "/drivers/bulb/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "check_authentication"
          }
        },
        {
          "id": "check_authentication",
          "template": "loading"
        },
        {
          "id": "authenticate"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "name": {
        "en": "Light",
        "nl": "Lamp"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature"
      ],
      "capabilitiesOptions": {
        "dim": {
          "opts": {
            "duration": true
          }
        },
        "light_hue": {
          "opts": {
            "duration": true
          }
        },
        "light_saturation": {
          "opts": {
            "duration": true
          }
        },
        "light_temperature": {
          "opts": {
            "duration": true
          }
        }
      },
      "id": "bulb"
    }
  ]
}