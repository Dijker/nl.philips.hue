{
  "id": "nl.philips.hue",
  "version": "4.0.0",
  "brandColor": "#F4AF2E",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Philips Hue"
  },
  "description": {
    "en": "Philips Hue for Homey"
  },
  "author": {
    "name": "Athom B.V."
  },
  "contributors": {
    "developers": [
      {
        "name": "Dennie de Groot",
        "email": "mail@denniedegroot.nl"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "category": "lights",
  "drivers": [
    {
      "images": {
        "large": "/drivers/bulb/assets/images/large.jpg",
        "small": "/drivers/bulb/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "list_bridges",
          "template": "list_devices",
          "options": {
            "singular": true
          },
          "navigation": {
            "next": "check_authentication"
          }
        },
        {
          "id": "check_authentication",
          "template": "loading"
        },
        {
          "id": "authenticate"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "name": {
        "en": "Light",
        "nl": "Lamp"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature"
      ],
      "capabilitiesOptions": {
        "dim": {
          "opts": {
            "duration": true
          }
        },
        "light_hue": {
          "opts": {
            "duration": true
          }
        },
        "light_saturation": {
          "opts": {
            "duration": true
          }
        },
        "light_temperature": {
          "opts": {
            "duration": true
          }
        }
      },
      "id": "bulb"
    }
  ]
}